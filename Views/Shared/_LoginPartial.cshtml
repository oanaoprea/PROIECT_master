@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{

    <li class="nav-item" style="float:right;">
            <a style="float:right; id=" manage" class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item" style="float:right;">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button style="float:right;" id="logout" type="submit" class="nav-link btn btn-link text-light">Logout</button>
        </form>
    </li>

}
else
{

    <li class="nav-item" style="float:right;">
        <a class="nav-link text-light" style="float:right;" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-light" style="float:right;" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
      
}
</ul>
